package cibertec;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JTextField;
import javax.swing.JLabel;
import javax.swing.JComboBox;
import javax.swing.DefaultComboBoxModel;
import java.awt.event.ItemListener;
import java.awt.event.ItemEvent;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class ModificarCeramico extends JDialog implements ItemListener, ActionListener {
	private JTextField textFContenido;
	private JTextField textFEspesor;
	private JTextField textFLargo;
	private JTextField textFAncho;
	private JTextField textFPrecio;
	private JComboBox cboModelos;
	private JButton btnCerrar;
	private JButton btnGrabar;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		try {
			ModificarCeramico dialog = new ModificarCeramico();
			dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
			dialog.setVisible(true);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Create the dialog.
	 */
	public ModificarCeramico() {
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(null);
		{
			textFContenido = new JTextField();
			textFContenido.setText("6");
			textFContenido.setColumns(10);
			textFContenido.setBounds(100, 137, 201, 20);
			getContentPane().add(textFContenido);
		}
		{
			JLabel lblContenido = new JLabel("Contenido");
			lblContenido.setBounds(10, 140, 80, 14);
			getContentPane().add(lblContenido);
		}
		{
			JLabel lblEspesormm = new JLabel("Espesor (mm)");
			lblEspesormm.setBounds(10, 115, 80, 14);
			getContentPane().add(lblEspesormm);
		}
		{
			textFEspesor = new JTextField();
			textFEspesor.setText("8.0");
			textFEspesor.setColumns(10);
			textFEspesor.setBounds(100, 112, 201, 20);
			getContentPane().add(textFEspesor);
		}
		{
			textFLargo = new JTextField();
			textFLargo.setText("62.0");
			textFLargo.setColumns(10);
			textFLargo.setBounds(100, 87, 201, 20);
			getContentPane().add(textFLargo);
		}
		{
			JLabel lblLargocm = new JLabel("Largo (cm)");
			lblLargocm.setBounds(10, 90, 80, 14);
			getContentPane().add(lblLargocm);
		}
		{
			JLabel lblAnchocm = new JLabel("Ancho (cm)");
			lblAnchocm.setBounds(10, 65, 80, 14);
			getContentPane().add(lblAnchocm);
		}
		{
			textFAncho = new JTextField();
			textFAncho.setText("62.0");
			textFAncho.setColumns(10);
			textFAncho.setBounds(100, 62, 201, 20);
			getContentPane().add(textFAncho);
		}
		{
			textFPrecio = new JTextField();
			textFPrecio.setText("92.56");
			textFPrecio.setColumns(10);
			textFPrecio.setBounds(100, 37, 201, 20);
			getContentPane().add(textFPrecio);
		}
		{
			JLabel lblPrecios = new JLabel("Precio (S/)");
			lblPrecios.setBounds(10, 40, 80, 14);
			getContentPane().add(lblPrecios);
		}
		{
			JLabel lblModelo = new JLabel("Modelo");
			lblModelo.setBounds(10, 15, 80, 14);
			getContentPane().add(lblModelo);
		}
		{
			cboModelos = new JComboBox();
			cboModelos.addItemListener(this);
			cboModelos.setModel(new DefaultComboBoxModel(new String[] {"Cinza Plus", "Luxury", "Austria", "Yungay Mix", "Thal\u00EDa"}));
			cboModelos.setToolTipText("Cinza Plus");
			cboModelos.setBounds(100, 11, 201, 22);
			getContentPane().add(cboModelos);
		}
		{
			btnCerrar = new JButton("Cerrar");
			btnCerrar.addActionListener(this);
			btnCerrar.setBounds(334, 36, 89, 23);
			getContentPane().add(btnCerrar);
		}
		{
			btnGrabar = new JButton("Grabar");
			btnGrabar.addActionListener(this);
			btnGrabar.setBounds(334, 11, 89, 23);
			getContentPane().add(btnGrabar);
		}
	}

	public void itemStateChanged(ItemEvent e) {
		if (e.getSource() == cboModelos) {
			itemStateChangedCboModelos(e);
		}
	}

	protected void itemStateChangedCboModelos(ItemEvent e) {
		int tipo, contenido;
		double precio, ancho, largo, espesor;
		String model;
		
		tipo = Determinar_Ceramica();
		model = Determinar_Modelo(tipo);
		precio = Determinar_Precio(tipo);
		ancho = Determinar_Ancho(tipo);
		largo = Determinar_Largo(tipo);
		espesor = Determinar_Espesor(tipo);
		contenido = Determinar_Contenido(tipo);

		Mostrar_Resultado(precio, ancho, largo, espesor, contenido);
		
		
	}
	

	
	String Determinar_Modelo(int tipo) {
		switch (tipo) {
			case 0:
				return Condicionales.modelo0;
			case 1:
				return Condicionales.modelo1;
			case 2:
				return Condicionales.modelo2;
			case 3: 
				return Condicionales.modelo3;
			default:
				return Condicionales.modelo4;
		}
	}
	double Determinar_Precio(int tipo) {
		switch (tipo) { 
			case 0:
				return Condicionales.precio0;
			case 1:
				return Condicionales.precio1;
			case 2:
				return Condicionales.precio2;
			case 3: 
				return Condicionales.precio3;
			default:
				return Condicionales.precio4;
		}
	}
	double Determinar_Ancho(int tipo) {
		switch (tipo) { 
			case 0:
				return Condicionales.ancho0;
			case 1:
				return Condicionales.ancho1;
			case 2:
				return Condicionales.ancho2;
			case 3: 
				return Condicionales.ancho3;
			default:
				return Condicionales.ancho4;
		}
		
	}
	double Determinar_Largo(int tipo) {
		switch (tipo) { 
			case 0:
				return Condicionales.largo0;
			case 1:
				return Condicionales.largo1;
			case 2:
				return Condicionales.largo2;
			case 3: 
				return Condicionales.largo3;
			default:
				return Condicionales.largo4;
		}
	}
	double Determinar_Espesor(int tipo) {
		switch (tipo) { 
			case 0:
				return Condicionales.espesor0;
			case 1:
				return Condicionales.espesor1;
			case 2:
				return Condicionales.espesor2;
			case 3: 
				return Condicionales.espesor3;
			default:
				return Condicionales.espesor4;
		}
	}
	int Determinar_Contenido(int tipo) {
		switch (tipo) { 
			case 0:
				return Condicionales.contenido0;
			case 1:
				return Condicionales.contenido1;
			case 2:
				return Condicionales.contenido2;
			case 3: 
				return Condicionales.contenido3;
			default:
				return Condicionales.contenido4;
		}
	}
	
	void Mostrar_Resultado(double precio, double ancho, double largo, double espesor, int contenido) {
	
		textFPrecio.setText(precio + "");
		textFAncho.setText(ancho + "");
		textFLargo.setText(largo + "");
		textFEspesor.setText(espesor + "");
		textFContenido.setText(contenido + "");
		
	}
	



	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == btnGrabar) {
			actionPerformedBtnGrabar(e);
		}
	}
	protected void actionPerformedBtnGrabar(ActionEvent e) {
		
		int tipo = Determinar_Ceramica();
		
		Guardar_Precio();
		Guardar_Ancho();
		Guardar_Largo();
		Guardar_Espesor();
		Guardar_Contenido();
		
	}
	
	void Guardar_Precio() {
		switch (Determinar_Ceramica()) { 
			case 0:
				Condicionales.precio0 = Double.parseDouble(textFPrecio.getText());
			case 1:
				Condicionales.precio1 = Double.parseDouble(textFPrecio.getText());
			case 2:
				Condicionales.precio2 = Double.parseDouble(textFPrecio.getText());
			case 3: 
				Condicionales.precio3 = Double.parseDouble(textFPrecio.getText());
			default:
				Condicionales.precio4 = Double.parseDouble(textFPrecio.getText());
		}
	}
	
	void Guardar_Ancho() {
		switch (Determinar_Ceramica()) { 
			case 0:
				Condicionales.ancho0 = Double.parseDouble(textFAncho.getText());
			case 1:
				Condicionales.ancho1 = Double.parseDouble(textFAncho.getText());
			case 2:
				Condicionales.ancho2 = Double.parseDouble(textFAncho.getText());
			case 3: 
				Condicionales.ancho3 = Double.parseDouble(textFAncho.getText());
			default:
				Condicionales.ancho4 = Double.parseDouble(textFAncho.getText());
		}
	}
	
	void Guardar_Largo() {
		switch (Determinar_Ceramica()) { 
			case 0:
				Condicionales.largo0 = Double.parseDouble(textFLargo.getText());
			case 1:
				Condicionales.largo1 = Double.parseDouble(textFLargo.getText());
			case 2:
				Condicionales.largo2 = Double.parseDouble(textFLargo.getText());
			case 3: 
				Condicionales.largo3 = Double.parseDouble(textFLargo.getText());
			default:
				Condicionales.largo4 = Double.parseDouble(textFLargo.getText());
		}
	}
	
	void Guardar_Contenido() {
		switch (Determinar_Ceramica()) { 
			case 0:
				Condicionales.espesor0 = Double.parseDouble(textFEspesor.getText());
			case 1:
				Condicionales.espesor1 = Double.parseDouble(textFEspesor.getText());
			case 2:
				Condicionales.espesor2 = Double.parseDouble(textFEspesor.getText());
			case 3: 
				Condicionales.espesor3 = Double.parseDouble(textFEspesor.getText());
			default:
				Condicionales.espesor4 = Double.parseDouble(textFEspesor.getText());
		}
	}
	
	void Guardar_Espesor() {
		switch (Determinar_Ceramica()) { 
			case 0:
				Condicionales.espesor0 = Double.parseDouble(textFEspesor.getText());
			case 1:
				Condicionales.espesor1 = Double.parseDouble(textFEspesor.getText());
			case 2:
				Condicionales.espesor2 = Double.parseDouble(textFEspesor.getText());
			case 3: 
				Condicionales.espesor3 = Double.parseDouble(textFEspesor.getText());
			default:
				Condicionales.espesor4 = Double.parseDouble(textFEspesor.getText());
		}
	}
	int Determinar_Ceramica() {
		return cboModelos.getSelectedIndex();
	}
}
